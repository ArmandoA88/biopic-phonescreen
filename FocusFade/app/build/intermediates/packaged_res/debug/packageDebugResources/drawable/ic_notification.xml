<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="24dp"
    android:height="24dp"
    android:viewportWidth="24"
    android:viewportHeight="24"
    android:tint="?attr/colorOnPrimary">
  
  <!-- Modern eye design for notification -->
  <group android:translateX="12" android:translateY="12">
    
    <!-- Outer eye shape - simplified for small size -->
    <path
        android:fillColor="@android:color/white"
        android:pathData="M-7,0 C-7,-3 -5,-4.5 -3,-4.5 L3,-4.5 C5,-4.5 7,-3 7,0 C7,3 5,4.5 3,4.5 L-3,4.5 C-5,4.5 -7,3 -7,0 Z"/>
    
    <!-- Modern iris -->
    <path
        android:fillColor="@android:color/white"
        android:fillAlpha="0.8"
        android:pathData="M0,0 m-3.5,0 a3.5,3.5 0 1,1 7,0 a3.5,3.5 0 1,1 -7,0"/>
    
    <!-- Pupil -->
    <path
        android:fillColor="@android:color/white"
        android:fillAlpha="0.6"
        android:pathData="M0,0 m-1.5,0 a1.5,1.5 0 1,1 3,0 a1.5,1.5 0 1,1 -3,0"/>
    
    <!-- Focus fade lines - simplified -->
    <group>
      <path
          android:fillColor="@android:color/white"
          android:fillAlpha="0.9"
          android:pathData="M-5,-2 L5,-2 L5,-1.5 L-5,-1.5 Z"/>
      <path
          android:fillColor="@android:color/white"
          android:fillAlpha="0.9"
          android:pathData="M-5,1.5 L5,1.5 L5,2 L-5,2 Z"/>
    </group>
    
  </group>
</vector>
